{
  "manifest_version": 3,
  "name": "Campuswire Related Pages",
  "short_name": "CS410 Project",
  "description": "",
  "version": "1.0",
  "action": {
    "default_popup": "menu.html",
    "default_title": "Open the Campuswire related pages sidebar"
  },
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "permissions": [
    "scripting",
    "sidePanel",
    "storage",
    "webRequest",
    "tabs"
  ],
  "host_permissions": [
    "https://*.campuswire.com/*feed*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.campuswire.com/*feed*"],
      "js": [
        "campuswire.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "index.html",
  "side_panel": {
    "default_path": "sidepanel.html"
  }
}
